<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>hello world\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable:true -->
<!-- 默认情况下text下的文本是不能选中的 -->
<text selectable="{{true}}">hello outfile</text>
<!-- 不传值，默认为true -->
<text selectable>hello outfile \n</text>

<!-- 3.space:决定文本空格大小 -->
<text>hello outfile\n</text>
<!-- nbsp 根据字体设置空格大小 -->
<text space="nbsp">hello outfile\n</text>
<!-- 中文字符空格大小 -->
<text space="emsp">hello outfile\n</text>
<!-- 中文字符空格一半大小 -->
<text space="ensp">hello outfile\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>