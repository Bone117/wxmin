/* components/w-goods-item/w-goods-item.wxss */
.goods-item{
  color: #333;
  padding-bottom: 85rpx;
  text-align: center;
}

.image {
  width: 100%;
  border-radius: 10rpx;
}

.desc-info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5px;
}

.title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}

.cfav {
  position: relative;
}
